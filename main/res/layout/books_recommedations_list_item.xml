<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@color/teal_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/bookRecommendationListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Parag"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bookRecommendationListPoster"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/bookRecommendationListAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="By- "
        android:textStyle="bold"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/bookRecommendationListTitle"
        app:layout_constraintLeft_toRightOf="@id/bookRecommendationListPoster"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/bookRecommendationListPoster"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/poster"
        tools:ignore="ContentDescription"
        tools:srcCompat="@drawable/poster" />

</androidx.constraintlayout.widget.ConstraintLayout>