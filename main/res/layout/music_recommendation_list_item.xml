<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/teal_200"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/musicRecommendationListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="Parag"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/musicRecommendationListPoster"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/musicRecommendationListArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="By- "
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/musicRecommendationListTitle"
        app:layout_constraintLeft_toRightOf="@id/musicRecommendationListPoster"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/musicRecommendationListPoster"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/music"
        android:src="@drawable/music"/>
</androidx.constraintlayout.widget.ConstraintLayout>